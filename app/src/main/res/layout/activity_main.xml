<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.akl.quizapp.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:textSize="25sp"
            android:layout_height="wrap_content"
            android:text="@string/score"
            android:id="@+id/score"
            android:layout_centerHorizontal="true"/>

        <LinearLayout
            android:layout_below="@id/score"
            android:layout_width="wrap_content"
            android:id="@+id/score_layout"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <TextView
                android:textSize="50sp"
                android:id="@+id/score_textview"
                android:paddingEnd="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/_0" />

            <TextView
                android:textSize="50sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/out_of10"/>
        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_below="@id/score_layout"
            android:layout_height="200dp"
            android:layout_marginBottom="20dp"
            android:id="@+id/question_image" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/question_image"
            android:text="@string/question"
            android:id="@+id/question_number_textview"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@id/question_number_textview"
            android:id="@+id/questions_layout">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="35sp"
                android:id="@+id/question_textview"/>

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/radioGroup"
                android:padding="15dp">

                <RadioButton
                    android:id="@+id/answer1"
                    android:textSize="20sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="onRadioButtonClicked"
                    android:padding="10dp" />

                <RadioButton
                    android:id="@+id/answer2"
                    android:textSize="20sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="onRadioButtonClicked"
                    android:padding="10dp" />

                <RadioButton
                    android:id="@+id/answer3"
                    android:textSize="20sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="onRadioButtonClicked"
                    android:padding="10dp" />

                <RadioButton
                    android:id="@+id/answer4"
                    android:textSize="20sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="onRadioButtonClicked"
                    android:padding="10dp" />
            </RadioGroup>

        </LinearLayout>

        <Button
            android:layout_width="wrap_content"
            android:text="@string/submit"
            android:layout_below="@id/questions_layout"
            android:layout_alignParentEnd="true"
            android:id="@+id/submit"
            android:layout_height="wrap_content" />

    </RelativeLayout>

</ScrollView>
